<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter!"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="200dp"
        >
    </TextView>

    <EditText
        android:id="@+id/loginactivity_edittext_studentcode"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:inputType="number"
        android:hint="StudentCode"
        android:textColorHint="@color/black"
        >

    </EditText>


    <EditText
        android:id="@+id/loginactivity_edittext_password"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:inputType="numberPassword"
        android:hint="Password"
        android:textColorHint="@color/black"
        >

    </EditText>

    <Button
        android:id="@+id/loginactivity_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="5dp">

    </Button>

    <Button
        android:id="@+id/loginactivity_button_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_margin="5dp">

    </Button>

</LinearLayout>