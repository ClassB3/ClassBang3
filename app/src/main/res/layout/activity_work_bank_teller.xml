<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".work.WorkActivity_BankTeller">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="#D8F6CE">

        <TextView
            android:id="@+id/WorkActivity_BankTeller_Text_Job"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:fontFamily="@font/bmjua"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="5dp"
            >

        </TextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/WorkActivity_BankTeller_Btn_SavingRegistration"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="예금 등록하기"
            android:fontFamily="@font/bmjua"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:background="@drawable/button_design01">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/WorkActivity_BankTeller_Btn_SavingList"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="예금 현황보기"
            android:fontFamily="@font/bmjua"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:background="@drawable/button_design01">

        </androidx.appcompat.widget.AppCompatButton>

       

        <EditText
            android:id="@+id/WorkActivity_BankTeller_Edit_Amount"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:hint="금액"
            android:textColorHint="@color/black"
            android:inputType="number"
            >

        </EditText>

        <EditText
            android:id="@+id/WorkActivity_BankTeller_Edit_Number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:hint="출번"
            android:textColorHint="@color/black"
            android:inputType="number"
            >

        </EditText>

        <EditText
            android:id="@+id/WorkActivity_BankTeller_Edit_Name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmjua"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:hint="이름"
            android:textColorHint="@color/black"
            android:inputType="text"
            >

        </EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/WorkActivity_BankTeller_Btn_Deposit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="입금하기"
            android:fontFamily="@font/bmjua"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:background="@drawable/button_design01">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/WorkActivity_BankTeller_Btn_Withdraw"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="출금하기"
            android:fontFamily="@font/bmjua"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:background="@drawable/button_design01">

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

</LinearLayout>